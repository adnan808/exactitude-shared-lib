{
  "name": "@vegainvestments/shared-lib",
  "version": "0.0.8",
  "description": "Package for shared all code base between internal services",
  "main": "dist/index.js",
  "repository": "https://github.com/vegainvestments/shared-lib.git",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/vegainvestments"
  },
  "bundledDependencies": true,
  "scripts": {
    "preversion": "git diff-index --quiet HEAD --",
    "prebuild": "rimraf dist && npm run format && npm run lint",
    "postbuild": "npm run copy:templates && npm run update:libs",
    "copy:templates": "copyfiles -u 2 libs/common/services/mail/template/* dist/common",
    "format": "prettier --write \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "build": "nest build",
    "build:watch": "nest build --watch",
    "update:libs": "./scripts/update_libs.sh",
    "test": "jest",
    "typeorm": "cd libs/ && ts-node ../node_modules/typeorm/cli.js -d common/database/database.datasource.ts"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "mysql": "^2.18.1",
    "mysql2": "^2.3.3",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.10",
    "webpack": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
