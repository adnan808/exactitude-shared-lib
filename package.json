{
  "name": "@vegainvestments/shared-lib",
  "version": "0.0.31",
  "description": "Package for shared all code base between internal services",
  "main": "dist/index.js",
  "repository": "https://github.com/vegainvestments/shared-lib.git",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/vegainvestments"
  },
  "scripts": {
    "preversion": "git diff-index --quiet HEAD --",
    "prebuild": "rimraf dist && npm run format && npm run lint",
    "postbuild": "npm run copy:templates && npm run update:libs",
    "copy:templates": "copyfiles -u 2 libs/common/services/mail/template/* dist/common",
    "format": "prettier --write \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "build": "nest build",
    "build:watch": "nest build --watch",
    "update:libs": "./scripts/update_libs.sh",
    "test": "jest",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js -d dist/common/database/database.datasource.js",
    "typeorm:generate": "pnpm run typeorm migration:generate ./libs/models/migrations/migration",
    "typeorm:show": "pnpm run typeorm migration:show",
    "typeorm:run": "pnpm run typeorm migration:run",
    "start": "nest start"
  },
  "dependencies": {
    "@nestjs/common": "^9.2.1",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.1",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/typeorm": "^9.0.1",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "mysql2": "^2.3.3",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.6.0",
    "typeorm": "^0.3.11",
    "webpack": "^5.75.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.5",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.2.1",
    "@types/express": "^4.17.14",
    "@types/jest": "29.2.4",
    "@types/node": "^18.11.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.2",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.3"
  },
  "peerDependencies": {
    "cache-manager": "^5.1.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
